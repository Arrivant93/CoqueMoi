generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CommandeStatus {
  fulfilled
  shipped
  awaiting_shipment
}

enum PhoneModel {
  iphonex
  iphone11
  iphone12
  iphone13
  iphone14
  iphone15
}

enum CaseMaterial {
  silicone
  polycarbonate
}

enum CaseFinish {
  smooth
  textured
}

enum CaseColor {
  black
  blue
  rose
}

model Configuration {
  id              String        @id @default(cuid())
  width           Int
  height          Int
  imageUrl        String
  color           CaseColor?
  model           PhoneModel?
  material        CaseMaterial?
  finish          CaseFinish?
  croppedImageUrl String?
  Commande        Commande[]
}

model User {
  id       String     @id @default(cuid())
  email    String
  Commande Commande[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Commande {
  id              String         @id @default(cuid())
  configurationId String
  configuration   Configuration  @relation(fields: [configurationId], references: [id])
  user            User           @relation(fields: [userId], references: [id])
  userId          String
  montant         Float
  isPaid          Boolean        @default(false)
  status          CommandeStatus @default(awaiting_shipment)

  adresseLivraison     AdresseLivraison?   @relation(fields: [adresseLivraisonId], references: [id])
  adresseLivraisonId   String?
  facturationAdresse   FacturationAdresse? @relation(fields: [facturationAdresseId], references: [id])
  facturationAdresseId String?

  createdAt DateTime @default(now())
  updated   DateTime @updatedAt
}

model AdresseLivraison {
  id         String     @id @default(cuid())
  name       String
  street     String
  city       String
  codepostal String
  country    String
  state      String?
  telephone  String?
  commandes  Commande[]
}

model FacturationAdresse {
  id         String     @id @default(cuid())
  name       String
  street     String
  city       String
  codepostal String
  country    String
  state      String?
  telephone  String?
  commandes  Commande[]
}
